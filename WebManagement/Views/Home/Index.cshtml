@{
    ViewData["Title"] = "主页";
}

<div class="container">
    <div class="col-lg-1 col-xs-4 col-md-2">
        <input class="btn btn-default btn-sm" id="OpenNoti" type="button" onclick="showOutNotifi()" value="查看通知" />
    </div>
    <p class="col-lg-2 col-sm-3 col-xs-7" style="line-height: 100%; align-content: center" id="NowDate"> 加载中... </p>
</div>
<hr style="height: 0px" />
<div class="container">
    <div class="col-lg-1 col-sm-2 col-xs-4 col-lg-offset-0"><img id="UserHImg" src="#" width="64" height="64" alt="" /></div>
    <div class="col-lg-offset-0 col-lg-3">
        <h4 id="UserID">加载中...</h4>
        <h5 id="BusDirection">我的校车: 加载中...</h5>
    </div>
</div>
<br>
<div class="container">
    <p id="ExpNumber">总人数: 加载中...</p>
    <p id="LRealNumber">离校上车人数: 加载中...</p>
    <p id="LPRealNumber">离校家长确认: 加载中...</p>
    <hr>
    <p id="CRealNumber">返校上车人数: 加载中...</p>
    <p id="CPRealNumber">返校家长确认: 加载中...</p>
</div>
<div class="container center-all">
    <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <button class="btn btn-success center-all" style="width: 100%" id="GoToChkA" onClick="GoToCheckA();">离校签到</button>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <button class="btn btn-success center-all" style="width: 100%" id="GoToChkB" onClick="GoToCheckB();">返校签到</button>
    </div>
</div>
<br>
<div class="container">
    <button class="btn btn-danger btn-md center-all" onClick="GoToCheckC();" style="width: 60%">修改数据</button>
</div>
