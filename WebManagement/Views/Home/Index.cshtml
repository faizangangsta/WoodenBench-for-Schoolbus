<!-- It is Notification area Below-->
<div id="NotificationDiv" class="pop-box container" style="display: none">
    <br>
    <div class="container">
        <h1 class="center-all" id="NotiTitle">通知加载失败😭😭😭</h1>
        <div class="pop-box-body container">
            <div id="NotiContent" class="container">
                <p>如果你看见这条消息，那就说明通知没有正确的加载</p>
                <p>&nbsp;</p>
                <p>我能做什么？</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;试试刷新这个页面，或者在不同网络环境下打开，如果多次尝试仍未打开，你可以：</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;1 - 跑到六楼来找我，因为我觉得后端服务不可能有问题;</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;2 - 去北京找Bmob公司，因为数据存储是他们提供的;</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;3 - 给我点钱，这样我就能升级服务器配置，提供更稳定的服务;</p>
                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;4 - 如果上面几条都做不到的话，那就去 “反馈Bug” 页面提交一个Bug吧😀;</p>
                <p>😂祝： 使用愉快</p>
            </div>
            <br>
            <input class="checkbox-inline" type="checkbox" id="WebNotiSeen">
            <label for="WebNotiSeen" id="WebNotiSeenL">标为已读</label>
        </div>
    </div>
    <input id="CloseNoti" class="btn btn-success text-center"
           type="button" style="width: 80%; margin-left: 10%; margin-bottom: 25px" onclick="closeNotifi();" value="关闭" />
</div>
<script>
    Bmob.initialize("b770100ff0051b0c313c1a0e975711e6", "281fb4c79c3a3391ae6764fa56d1468d");
    var currentUser;
    var currentBus;
    var query = new Bmob.Query(Bmob.Object.extend("GeneralData"));
    query.get("AMZgHHHK", {
        success: function (objectGet)
        {
            var reg = new RegExp("/NL", "g");
            var notiStr = objectGet.get("DataContent").replace(reg, "<br>");
            notiStr += "<br>";
            document.getElementById("NotiContent").innerHTML = notiStr;
            document.getElementById("NotiTitle").innerHTML = objectGet.get("NTitle");
            Maininit("/", mainInitCallback);
        },
        error: function (obj, err)
        {
            $("#WebNotiSeen").remove();
            $("#CloseNoti").remove();
            $("#WebNotiSeenL").remove();
            showOutNotifi();
        }
    });

    function TotalStudentsCallBack(data)
    {
        $("#ExpNumber").text("总人数: " + data.count);
        var num1 = 0, num2 = 0, num3 = 0, num4 = 0;
        for (var i = 0; i < data.count; i++)
        {
            var tmp = JSON.parse(eval("data.num_" + i));
            if (tmp.LeavingChecked.toLowerCase() === "true") num1++;
            if (tmp.ParentLeavingChecked.toLowerCase() === "true") num2++;
            if (tmp.ComingChecked.toLowerCase() === "true") num3++;
            if (tmp.ParentComingChecked.toLowerCase() === "true") num4++;
        }
        $("#LRealNumber").text("离校上车人数: " + num1);
        $("#LPRealNumber").text("离校家长确认: " + num2);
        $("#CRealNumber").text("返校上车人数: " + num3);
        $("#CPRealNumber").text("返校家长确认: " + num4);
    }

    function BusCallBack(data)
    {
        currentBus = data;
        setCookie("CBusID", currentBus.busID);
        $("#BusDirection").text("我的校车: " + currentBus.Name);
        GetStudents(currentBus.busID, currentBus.TeacherID, TotalStudentsCallBack);
    }


    function mainInitCallback(cUser)
    {
        currentUser = cUser;
        var dayofWeek = new Array("日", "一", "二", "三", "四", "五", "六");
        $("#navUsrName").text("注销当前账户  -  " + currentUser[8]);
        $("#UserID").text("你好，" + currentUser[8]);
        $("#NowDate").html(new Date().getMonth() + "月" + new Date().getDate() + "日 <br><br> 星期" + dayofWeek[new Date().getDay()]);
        $("#UserHImg").prop("src", "https://res.lhy0403.top/WBUserHeadImg/" + currentUser[4]);

        if (currentUser[5].toLowerCase() === "false")
        {
            document.getElementById("WebNotiSeen").checked = false;
            showOutNotifi();
        }
        else { document.getElementById("WebNotiSeen").checked = true; }
        GetMgmtBus(currentUser[0], currentUser[1], currentUser[2], BusCallBack);
    }

    function showOutNotifi()
    {
        $("#NotificationDiv").css({ "top": 0 });
        $("#NotificationDiv").css({ "position": "absolute" }).animate({ top: document.body.clientHeight * 0.2, opacity: "show" }, "normal");
    }

    function closeNotifi()
    {
        $("#mask").remove();
        $("#NotificationDiv").animate({ top: document.body.clientHeight, opacity: "hide" }, "normal");
        WriteUserData(currentUser[1], "notice", document.getElementById("WebNotiSeen").checked, currentUser[2], function (result)
        {
            currentUser = result;
        });
    }
    function GoToCheckA()
    {
        setCookie("SignMode", "leave");
        location.href = "/Home/SignStudent/";
    }
    function GoToCheckB()
    {
        setCookie("SignMode", "come");
        location.href = "/Home/SignStudent/";
    }

    function GoToCheckC()
    {
        if (confirm("确实要修改数据？"))
            setCookie("SignMode", "edit");
        location.href = "/Home/SignStudent/";
    }

    wx.ready(function ()
    {
        wx.hideOptionMenu();
    });
</script>
